<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Area_Activirt">

    <include
        android:id="@+id/add_area_page_toolbar"
        layout="@layout/abo_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
    </include>

    <EditText
        android:id="@+id/area_name_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:hint="write Area Name..."
        android:gravity="center"/>

    <Button
        android:id="@+id/area_lat_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/border_design"
        android:hint="Pick area location..."
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        />


    <Button
        android:id="@+id/btn_save_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save Area"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/border_design"
        android:layout_marginTop="300dp"
        />

    <Button
        android:id="@+id/btn_save_category_intent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add new category"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/border_design"
        android:layout_marginTop="400dp"/>


</RelativeLayout>